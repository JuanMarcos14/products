<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Product.AddProduct">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Add Product" XAlign="Center" FontAttributes="Bold" FontSize="Large" />
            <Label Text="Name:" FontAttributes="Bold" />
            <Entry x:Name="txtName" />
            <Label Text="Price:" FontAttributes="Bold" />
            <Entry Keyboard="Numeric" x:Name="txtPrice" />
            <Button x:Name="btnSave" Text="Save" Clicked="BtnSave_Clicked" Style="{StaticResource saveButtonStyle}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>